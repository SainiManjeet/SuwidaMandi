<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white"
        android:layout_marginRight="@dimen/_10sdp">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/md_nav_back"
            android:tint="@color/black"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/black"
            android:fontFamily="@font/sfpdisplaymedium"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp">

        </TextView>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_4sdp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_account"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/ic_mail"
                    android:tint="@color/blue"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingTop="@dimen/_4sdp"
                    android:layout_centerInParent="true"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_50sdp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:background="@color/blue"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/blue"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_centerInParent="true"
                    android:hint="@string/password"
                    android:paddingTop="@dimen/_4sdp"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_50sdp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:background="@color/blue"/>

            <TextView
                android:id="@+id/forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/forgot_password"
                android:textColor="@color/pass"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/myraidprolight"
                android:paddingRight="@dimen/_2sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:text="@string/login"
                android:background="@color/blue"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:layout_margin="@dimen/_20sdp"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/custom_bg_fb"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:tint="@color/white"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Login with Facebook"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white" />




            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                android:background="@drawable/custom_bg_go"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:src="@drawable/ic_brands_and_logotypes"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_40sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Login with Google"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!--     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/spfdisplay_heavy"
                         android:textColor="@color/black"
                         android:textSize="@dimen/_12sdp"
                         android:text="Don't have account?"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spfdisplay_heavy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="Don't have account?"/>


                <TextView
                    android:id="@+id/sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spfdisplay_heavy"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="Sign Up"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>
